{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install",
  "framework": null,
  "redirects": [
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/databaze/(.*)", 
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/predstaveni/(.*)",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/blog/(.*)",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/bud-aktivni-v-mediich_clanky_rozhovory/(.*)",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/produkt/(.*)",
      "destination": "/aktivity",
      "permanent": true
    },
    {
      "source": "/jsem-ucitel/(.*)",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/be-active/(.*)",
      "destination": "/",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/aktivity/([0-9]+)\\.html$",
      "destination": "/aktivity/$1.html"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.html$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    },
    {
      "source": "/aktivity/(.*)\\.html$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.json$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json; charset=utf-8"
        }
      ]
    },
    {
      "source": "/(.*)\\.xml$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml; charset=utf-8"
        }
      ]
    }
  ]
}