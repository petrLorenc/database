# Hybrid React + Static SEO Configuration
# Copy this to .env.local and customize for your deployment

# Domain configuration
REACT_APP_DOMAIN=https://your-domain.com
REACT_APP_API_BASE_URL=https://api.your-domain.com

# AWS S3 Configuration (for deployment script)
AWS_S3_BUCKET_STAGING=your-staging-bucket
AWS_S3_BUCKET_PRODUCTION=your-production-bucket

# CloudFront Distribution IDs
AWS_CLOUDFRONT_STAGING=YOUR_STAGING_DISTRIBUTION_ID
AWS_CLOUDFRONT_PRODUCTION=YOUR_PRODUCTION_DISTRIBUTION_ID

# Analytics
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Development settings
GENERATE_SOURCEMAP=false
BUILD_PATH=build

# Static page generation
STATIC_PAGES_ENABLED=true
SITEMAP_ENABLED=true